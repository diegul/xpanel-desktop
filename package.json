{
  "name": "xpanel-desktop",
  "version": "1.0.0",
  "description": "Desktop wrapper for Finalmouse XPANEL (Chromium-based, WebHID enabled).",
  "main": "main.js",
  "author": {
    "name": "diegul",
    "email": "management@diegul.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.diegul.xpanel",
    "productName": "XPANEL Desktop",
    "files": [
      "main.js",
      "preload.js",
      "icons/**/*"
    ],
    "asar": true,
    "directories": {
      "buildResources": "icons"
    },
    "win": {
      "target": ["nsis"],
      "icon": "icons/icon.ico",
      "artifactName": "XPANEL-Desktop-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "XPANEL Desktop"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "icons",
      "artifactName": "xpanel-desktop-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": ["dmg", "pkg"],
      "category": "public.app-category.utilities",
      "artifactName": "XPANEL-Desktop-${version}-${arch}.${ext}",
      "appId": "com.diegul.xpanel"
    },
    "dmg": {
      "title": "XPANEL Desktop"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  }
}
